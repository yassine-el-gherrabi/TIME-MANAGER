# Time Manager - Global Environment Variables
# Copy this file to .env and fill in your values

# Application Environment
NODE_ENV=development

# Docker Compose
COMPOSE_PROJECT_NAME=time-manager

# Database Configuration
DB_USER=timemanaged
DB_PASSWORD=secure_password_here
DB_NAME=timemanager_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_TTL=24h

# Ports (for development)
BACKEND_PORT=8080
FRONTEND_PORT=3000
DATABASE_PORT=5432
