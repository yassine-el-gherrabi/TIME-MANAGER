# ============================================
# Dockerfile.dev - Development with hot reload
# ============================================
FROM node:20-alpine

WORKDIR /app

# Copy package files first (cache layer)
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

EXPOSE 3000

# Hot reload command
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
