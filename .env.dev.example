# Mode
ENV=dev

# Dockerfiles
DOCKERFILE_BACKEND=Dockerfile.dev
DOCKERFILE_FRONTEND=Dockerfile.dev

# Database
POSTGRES_PASSWORD=timemanager_dev_password
DATABASE_URL=postgres://timemanager:timemanager_dev_password@postgres:5432/timemanager

# Backend
APP_HOST=0.0.0.0
APP_PORT=8080
RUST_LOG=debug
JWT_SECRET=dev-secret-key-not-for-production-minimum-32-characters-long

# Frontend (note: /v1 is added in code, so only /api here)
VITE_API_BASE_URL=http://localhost:8000/api

# CORS (Traefik URL)
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost

# Traefik
TRAEFIK_DASHBOARD=true
TRAEFIK_LOG_LEVEL=DEBUG

# Email (Mailpit for dev)
EMAIL_ENABLED=true
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@timemanager.local
EMAIL_FROM_NAME=Time Manager
FRONTEND_URL=http://localhost:8000
