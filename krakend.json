{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Time Manager API Gateway",
  "port": 8000,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/api/{all}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/{all}",
          "host": ["http://backend:8080"],
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/api/{all}",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/{all}",
          "host": ["http://backend:8080"],
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/api/{all}",
      "method": "PUT",
      "backend": [
        {
          "url_pattern": "/{all}",
          "host": ["http://backend:8080"],
          "method": "PUT"
        }
      ]
    },
    {
      "endpoint": "/api/{all}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/{all}",
          "host": ["http://backend:8080"],
          "method": "DELETE"
        }
      ]
    },
    {
      "endpoint": "/api/{all}",
      "method": "PATCH",
      "backend": [
        {
          "url_pattern": "/{all}",
          "host": ["http://backend:8080"],
          "method": "PATCH"
        }
      ]
    },
    {
      "endpoint": "/{all}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/{all}",
          "host": ["http://frontend:3000"],
          "method": "GET"
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  }
}