# Mode
ENV=prod

# Dockerfiles
DOCKERFILE_BACKEND=Dockerfile
DOCKERFILE_FRONTEND=Dockerfile

# Database
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-change_in_production}
DATABASE_URL=postgres://timemanager:${POSTGRES_PASSWORD:-change_in_production}@postgres:5432/timemanager

# Backend
APP_HOST=0.0.0.0
APP_PORT=8080
RUST_LOG=info
JWT_SECRET=${JWT_SECRET:-prod-secret-change-in-production-min-32-chars}

# Frontend (note: /v1 is added in code, so only /api here)
VITE_API_BASE_URL=https://your-domain.com/api

# CORS (Production domain)
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Traefik
TRAEFIK_DASHBOARD=false
TRAEFIK_LOG_LEVEL=ERROR
